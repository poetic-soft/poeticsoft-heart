{
  "name": "poeticsoft/heart",
  "description": "NÃºcleo del ecosistema Poeticsoft para WordPress",
  "type": "wordpress-plugin",
  "version": "0.0.0",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Poeticsoft",
      "email": "alberto@poeticsoft.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "yahnis-elsts/plugin-update-checker": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "Poeticsoft\\": "class/"
    },
    "files": [
      "class/functions.php"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "composer/installers": true
    }
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^4.0"
  },
  "scripts": {
    "format": "phpcbf .",
    "lint": "phpcs ."
  }
}